@import 'nib'

@font-face
  font-family 'Cherry Cream Soda'
  font-style normal
  font-weight normal
  src local('Cherry Cream Soda'), local('CherryCreamSoda'), url('http://themes.googleusercontent.com/font?kit=OrD-AUnFcZeeKa6F_c0_WxqwWSV7TiEqKBI7h3gm4xc') format('woff')

#overlay
  absolute top left
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.05)
  z-index 100

$border-radius = 10px
#box
  $box-width = 400px
  $box-height = 300px

  absolute top 50% left 50%
  box-shadow 1px 1px 3px rgba(0, 0, 0, 0.3)
  width $box-width
  height $box-height
  margin-left -($box-width/2)
  margin-top -($box-height/2)
  border-radius $border-radius
  border 2px solid black
  padding 5px
  background-color white
  z-index 100

h1
  font-family 'Cherry Cream Soda'
  text-align center
  margin-top 0
  margin-bottom 0
  border-top-left-radius $border-radius
  border-top-right-radius $border-radius
  background yellowGreen

h2
  font-size 10px
  margin-top 0
  margin-bottom 0
  border-bottom 1px dotted black

ul
  padding-left 15px

